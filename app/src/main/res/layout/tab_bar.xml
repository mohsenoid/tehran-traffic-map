<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/hsvTab"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fadingEdge="none"
    android:fillViewport="true"
    android:scrollbars="none">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/ibTabTraffic"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_1"
            android:drawableTop="@drawable/ic_tab_traffic"
            android:enabled="false"
            android:onClick="onClick"
            android:padding="20dp"
            android:src="@drawable/ic_tab_traffic" />

        <ImageButton
            android:id="@+id/ibTabRoad"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_7"
            android:drawableTop="@drawable/ic_tab_rss"
            android:onClick="onClick"
            android:padding="20dp"
            android:src="@drawable/ic_tab_road"
            android:text="@string/mnu_news" />

        <ImageButton
            android:id="@+id/ibTabPlane"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_4"
            android:drawableTop="@drawable/ic_tab_plane"
            android:onClick="onClick"
            android:padding="20dp"
            android:src="@drawable/ic_tab_plane"
            android:text="@string/mnu_plans" />

        <ImageButton
            android:id="@+id/ibTabBrt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_tab_2"
            android:drawableTop="@drawable/ic_tab_brt"
            android:onClick="onClick"
            android:padding="20dp"
            android:src="@drawable/ic_tab_brt"
            android:text="@string/mnu_brt" />

        <ImageButton
            android:id="@+id/ibTabMetro"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_6"
            android:drawableTop="@drawable/ic_tab_underground"
            android:onClick="onClick"
            android:padding="20dp"
            android:src="@drawable/ic_tab_underground"
            android:text="@string/mnu_metro" />

        <ImageButton
            android:id="@+id/ibTabContact"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_5"
            android:drawableTop="@drawable/ic_tab_contact"
            android:onClick="onClick"
            android:padding="20dp"
            android:src="@drawable/ic_tab_contact"
            android:text="@string/mnu_contact" />

        <ImageButton
            android:id="@+id/ibTabAbout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/selector_tab_3"
            android:drawableTop="@drawable/ic_tab_about"
            android:onClick="onClick"
            android:padding="20dp"
            android:src="@drawable/ic_tab_about"
            android:text="@string/mnu_about" />
    </LinearLayout>

</HorizontalScrollView>